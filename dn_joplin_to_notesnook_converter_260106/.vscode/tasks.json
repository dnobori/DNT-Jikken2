// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build", // ← ここが launch.json の preLaunchTask と一致
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/${workspaceFolderBasename}.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
